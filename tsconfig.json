{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "*.test.ts",
    "node_modules"
  ]
}
